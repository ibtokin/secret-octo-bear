package com.example.smartmanager;

import java.util.ArrayList;
import java.util.Date;


public class User
{
  //Class level variables:
	public String Name;
	public boolean ClockedIn;
	public	ArrayList<Date> worklog= new ArrayList<Date>(1000);
	public long elapsed;
	private int counter=0;


	//Constructor:
	User(String name)
	{
		Name= name;
		ClockedIn=false;
	}

	//"Get" methods:

	//to check if our user is clocked in:
	public boolean isOnClock()
	{
		return ClockedIn;
	}
	
	public long getTheTime()
	{
		long mTime= (getCurrentTimeOn());
		return mTime;
	}

		private long getCurrentTimeOn()
		{
			if(counter==0)
			{
			elapsed=0;
			}
			if(counter>=1)
			{
				Date mDate= new Date();
				long punchtime= (worklog.get(counter)).getTime();
				elapsed = (punchtime-mDate.getTime());
			}
			return elapsed;
		}

	public String toString()
	{
		return Name;
	}
	
	//"Set" methods:
	
	public void Punch()
	{
		this.ClockedIn^=this.ClockedIn;
		Date newDate= new Date();
		this.worklog.add(counter, newDate);
		counter++;
	}


	//this reacts to our onPunch event (whenever the user is selected and a toggle is turned on/off):

}
